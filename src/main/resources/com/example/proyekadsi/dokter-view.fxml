<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyekadsi.controller.DokterController">
    <content>
        <VBox spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label text="Input Rekam Medis">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>

            <Label text="Keluhan Pasien:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtKeluhan" prefHeight="80.0" promptText="Masukkan keluhan..." />

            <Label text="Diagnosa:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtDiagnosa" prefHeight="80.0" promptText="Masukkan diagnosa..." />

            <Label text="Penanganan / Tindakan:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtPenanganan" prefHeight="80.0" promptText="Tindakan yang dilakukan..." />

            <Label text="Resep Obat (Opsional):" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtResep" prefHeight="60.0" promptText="Detail obat..." />

            <CheckBox fx:id="chkLab" text="Perlu Rujukan Laboratorium?" />

            <Button text="SIMPAN REKAM MEDIS" onAction="#onSimpan" prefWidth="200.0" style="-fx-background-color: #3F51B5; -fx-text-fill: white;"/>
        </VBox>
    </content>
</ScrollPane>